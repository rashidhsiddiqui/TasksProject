@model TasksProjectMVC5App.Models.Movie
@{
    ViewBag.Title = "Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@*This view is used to display
detail of a movie*@

@if(Model != null)
{
    <h2>@Model.Name</h2>
    <ul>
        <li>Genre: @Model.Genre.Name</li>
        <li>Release Date: @string.Format("{0:MM-dd-yyyy}", @Model.ReleaseDate)</li>
        <li>Date Added: @string.Format("{0:MM-dd-yyyy}", @Model.DateAdded)</li>
        <li>Number in Stock: @Model.NoInStock</li>
    </ul>
}
else
{
    <h2>No movie record found.</h2>
}

